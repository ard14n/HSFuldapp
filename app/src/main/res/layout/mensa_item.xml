<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text=""
        android:id="@+id/food_category"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:maxWidth="250dp"
        android:id="@+id/food_name"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/food_category"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text=""
        android:maxWidth="250dp"
        android:id="@+id/food_description"
        android:maxLines="3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/food_name"
        android:layout_alignStart="@+id/food_name" />

    <ImageView
        android:id="@+id/food_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/food_category"
        android:layout_alignEnd="@+id/food_price"
        android:layout_alignStart="@+id/food_price"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="9dp"
        android:id="@+id/food_price"
        android:layout_alignBaseline="@+id/food_description"
        android:layout_alignBottom="@+id/food_description"
        android:layout_alignParentEnd="true" />
</RelativeLayout>